---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, GITHUB_URL, EMAIL_ADDRESS } from '../consts';
---

<!doctype html>
<html lang="ja">
	<style>
		h1{
			text-align: center;
		}
		.title{
			font-size: 2.5em;
		}
		p{
			margin-bottom: 1em;
			padding: 0;
		}
	</style>
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<h1 class="title">YABUINU</h1>
		</main>
		<Footer />
	</body>
</html>